<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentQuran">

    <fragment
        android:id="@+id/fragmentQuran"
        android:name="com.programmergabut.solatkuy.quran.ui.listsurah.ListSurahFragment"
        android:label="fragment_quran"
        tools:layout="@layout/fragment_list_surah" >
        <deepLink app:uri="App://fragmentQuran" />
        <action
            android:id="@+id/action_quranFragment_to_readSurahActivity"
            app:destination="@id/readSurahFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"/>
    </fragment>
    <fragment
        android:id="@+id/readSurahFragment"
        android:name="com.programmergabut.solatkuy.quran.ui.readsurah.ReadSurahFragment"
        android:label="activity_read_surah"
        tools:layout="@layout/fragment_read_surah" >
        <argument
            android:name="selectedSurahId"
            android:defaultValue="-1"
            app:argType="string" />
        <argument
            android:name="selectedSurahName"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="selectedTranslation"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="isAutoScroll"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
</navigation>